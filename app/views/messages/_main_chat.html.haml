.Chat-main
  .Chat-main__group-info
    .Left-items
      .Left-items__group 
      = @group.name
      .Left-items__members
        %ul 
          Member :
          - @group.users.each do |user|
            %li= user.name
    .Right-items
      = link_to edit_group_path(@group), class: 'Right-items__edit-btn' do
        Edit

  .Chat-main__message-list
    = render @messages

  .Chat-main__message-form
    = form_with model: [@group, @message], html: {class: "Form"}, id: "Form-id", local: true do |f|
      .Form__contents
        = f.text_field :content, class: "Form__input-textarea", placeholder: "type a message"
        = f.label :image, class: "Form__input-image" do
          = icon("far", "image")
          = f.file_field :image, style: "display:none"
      = f.submit "Send", class: "Form__submit-btn"